<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <%= render partial: "status_buttons", locals: { order: order } %>

      <% if order.pending? || order.approved? || order.shipped? %>
        <button class="btn btn-primary">Save</button>
      <% end %>

      <%= link_to "Cancel", orders_path, type: "button", class: "btn btn-default" %>

      <% if show_cancel_button(order, current_user) %>
        <%= button_tag name: "order[status]", value: "cancel", type: :submit,
            class: 'btn btn-danger pull-right', data: confirm(title: "Canceling Order") do %>
          Cancel Order
          <i class="glyphicon glyphicon-remove"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
